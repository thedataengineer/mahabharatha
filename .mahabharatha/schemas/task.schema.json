{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["id", "status"],
  "properties": {
    "id": {"type": "string"},
    "status": {"enum": ["pending", "running", "complete", "failed", "blocked"]},
    "worker_id": {"type": ["string", "null"]},
    "started_at": {"type": ["string", "null"]},
    "completed_at": {"type": ["string", "null"]},
    "error": {"type": ["string", "null"]}
  }
}
